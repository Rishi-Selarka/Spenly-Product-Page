{
  "functions": {
    "api/**/*.go": {
      "runtime": "go1.x"
    }
  },
  "buildCommand": "go mod download && go build -o /tmp/api ./api/...",
  "rewrites": [
    {
      "source": "/api/whatsapp/webhook",
      "destination": "/api/whatsapp/webhook"
    },
    {
      "source": "/api/whatsapp/link-token",
      "destination": "/api/whatsapp/link-token"
    },
    {
      "source": "/api/whatsapp/transactions",
      "destination": "/api/whatsapp/transactions"
    }
  ]
}

